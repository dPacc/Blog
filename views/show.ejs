<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= clickBlog.title %>
    </div>
    <div class="ui top attached">
      <div class="item">
        <img class="ui centered rounded image" src="<%=clickBlog.image%>">
        <div class="content">
          <span><%=clickBlog.created.toDateString()%></span>
        </div>
        <div class="description">
          <p><%-clickBlog.body%></p>
        </div>
        <a class="ui orange basic button" href="/blogs/<%= clickBlog._id %>/edit">Edit</a>
        <form id="delete" action="/blogs/<%=clickBlog._id%>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete</button>
        </form>
      </div>
    </div>
</div>

<% include partials/footer %>
