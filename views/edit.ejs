<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= editBlog.title %>
    </div>
    <form action="/blogs/<%=editBlog._id%>?_method=PUT" method="POST">
        <div class="ui form">
          <div class="field">
            <label>Enter Title</label>
            <textarea rows="1" name="blog[title]"><%= editBlog.title %></textarea>
          </div>
          <div class="field">
            <label>Image URL</label>
            <textarea name="blog[image]" rows="1"><%= editBlog.image %></textarea>
          </div>
          <div class="field">
            <label>Enter Content</label>
            <textarea name="blog[body]"><%= editBlog.body %></textarea>
          </div>
          <input class="ui button" type="submit">
        </div>
    </form>
</div>

<% include partials/footer %>
